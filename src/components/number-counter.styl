@charset 'UTF-8'
@require '~utilities/style-vars'

.number-counter
	display flex
	flex-direction column
	justify-content center
	position relative
	height 100%

.number-counter__identifier
	position absolute
	top rem(5)
	width 100%
	font-size 0.5em
	text-align center

	@media only screen and (min-height: em(480))
		font-size 0.75em

.number-counter__controls
	display flex
	justify-content center
	align-items stretch
	position relative

.number-counter__control
	display block
	flex 1 1 auto
	position relative
	font-size rem(20)
	line-height rem(60)
	text-align center
	// border rem(1) solid black // TEMP

	@media only screen and (min-height: em(480))
		line-height rem(80)

.number-counter__control--clickable
	border-radius rem(10)

	&:hover
		background-color rgba(lightgrey, 0.2)

.number-counter__control--count
	flex 1 0 auto
	font-size rem(30)

	@media only screen and (min-height: em(480))
		font-size rem(40)

.number-counter__description
	transition: 250ms ease-in-out
	display block

