@charset 'UTF-8'
@require '~utils/style-vars'

.smash-up-randomizer
	color smash-up--bold
	position relative
	width 100%
	overflow-y scroll
	background-color smash-up--contrast-light

.smash-up-randomizer__page-links
	display flex
	justify-content space-between
	position fixed
	width 100%
	right 0.35em
	padding @right @right * 2
	z-index 100

	> :last-child
		text-align right
