@charset 'UTF-8'
@require '~utils/style-vars'

.game-overview
	padding-top em(50)
	padding-bottom em(80)
	position relative

.game-overview__message
	color smash-up--contrast-dark
	font-size em(12)
	text-align center

.game-overview__info
	padding em(10)
	display flex
	justify-content space-between
	align-items center
	line-height 1.2

.game-overview__player-info
	display flex
	flex-direction column
	align-items center

.game-overview__player-title
	font-size em(12)
	color smash-up--light

.game-overview__player-number
	font-size em(32)
	color smash-up--wild

.game-overview__deck-info
	padding-left em(16)
	padding-right em(16)
	flex 1 1 auto

.game-overview__deck-name
	color smash-up--medium
	font-size em(18)

.game-overview__deck-rank
	color smash-up--light
	font-size em(12)
