@charset 'UTF-8'
@require './includes/**/*'


//-------------------------------------------
// Border-Box
//-------------------------------------------

*
::before
::after
	box-sizing border-box


//-------------------------------------------
// Body
//-------------------------------------------

html
body
	height 100%
	-webkit-tap-highlight-color transparent

html
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	font-family font-family--roboto
	font-size font-size--base

	@media xlarge-up
		font-size font-size--base + 4

	@media xxlarge-up
		font-size font-size--base + 8

	@media print-only
		font-size font-size--base--print


body
	overflow-x hidden


//-------------------------------------------
// Form Fields
//-------------------------------------------

input[type=number]
	-moz-appearance textfield

	&::-webkit-inner-spin-button
	&::-webkit-outer-spin-button
		-webkit-appearance none
		-moz-appearance none
		appearance none
		margin 0


//-------------------------------------------
// Text Overrides
//-------------------------------------------

h1
h2
h3
h4
h5
h6
p
	text()


//-------------------------------------------
// Line Spacing
//-------------------------------------------

li
p
	description()


//-------------------------------------------
// Links
//-------------------------------------------

h1
h2
h3
h4
h5
h6
	a
		text-decoration none

a
	color text-color--wild

p
	.text-underline
		text-decoration underline

li
p
	& .no-text-underline
		text-decoration none

:focus
	outline none


//-------------------------------------------
// Media Query Viewport Width
//-------------------------------------------

// @-webkit-viewport
// 	width device-width
// @-moz-viewport
// 	width device-width
@-ms-viewport
	width device-width
// @-o-viewport
// 	width device-width
@viewport
	width device-width
