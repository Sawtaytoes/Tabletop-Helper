@charset 'UTF-8'
@require './includes/**/*'


//-------------------------------------------
// Containers
//-------------------------------------------

.contact
	display flex
	flex-wrap wrap

.contact__form-container
	margin-bottom rem(24)
	flex 0 0 100%

	@media medium-up
		padding-right rem(10)
		flex 0 0 (1/2)*100%
		max-width (1/2)*100%

	@media large-up
		flex 0 0 (2/3)*100%
		max-width (2/3)*100%

.contact__extras-container
	flex 0 0 100%

	@media medium-up
		padding-left rem(10)
		flex 0 0 (1/2)*100%
		max-width (1/2)*100%

	@media large-up
		flex 0 0 (1/3)*100%
		max-width (1/3)*100%


//-------------------------------------------
// Fields
//-------------------------------------------

.contact__fields
	display flex
	flex-wrap wrap

	@media large-up
		margin-bottom rem(20)

.contact__field
	margin-bottom rem(10)

.contact__field--spacing
	flex 0 0 100%

	@media large-up
		contact-field-padding = rem(12.5)
		margin-bottom 0
		flex 0 0 (1/3)*100%
		max-width (1/3)*100%

		&:nth-child(1)
			padding-right contact-field-padding

		&:nth-child(2)
			padding-left contact-field-padding / 2
			padding-right contact-field-padding / 2

		&:nth-child(3)
			padding-left contact-field-padding

.contact__field__input
	appearance none
	width 100%
	line-height 1.6
	background transparent
	border 0
	border-bottom rem(2) solid border-color--light

	&:focus
		border-color border-color--wild
		outline 0

		@media medium-up
			&::placeholder
				transition all 250ms
				transform scale(1)
				display block
				position relative
				top rem(-14)
				font-size rem(12)

				textarea&
					top rem(0)

.contact__field__error
	display none
	color text-color--error

	&.is-invalid
		display block

.contact__message
	margin-bottom rem(10)

.contact__send-button
	button()


//-------------------------------------------
// Choices
//-------------------------------------------

.contact__choices
	margin-bottom rem(20)

.contact__choices__wrapper
	border 0
	margin 0
	padding 0

.contact__choices__heading
	margin-bottom rem(10)
	font-weight bold
	font-size rem(20)

.contact__reasons
	display flex
	flex-wrap wrap
	align-content center
	justify-content space-between

.contact__reason
	display flex
	flex 1 1 100%
	position relative
	width 100%
	border-bottom rem(1) solid text-color--wild

	&:nth-last-child(2)
		border 0

	@media medium-up
		justify-content center
		flex 1 1 (1/2)*100%

		&:nth-last-child(4)
			border 0

	@media large-up
		flex 1 1 (1/4)*100%
		border 0

.contact__reason--separator
	display none

	@media large-up
		display block
		flex 0

.contact__reason__separator
	@media large-up
		margin 0 0 0 rem(-1)
		left 50%
		width 100%
		height 100%
		position absolute
		border 0
		border-bottom 0
		border-right rem(2) solid text-color--wild

.contact__choices__button
	display block
	width 100%
	white-space nowrap

	@media large-up
		display inline-block
		width auto

// .contact__choices__input

.contact__choices__label
	display inline-block
	padding rem(10 6)
	width 100%

	@media large-up
		width auto


//-------------------------------------------
// Social Links
//-------------------------------------------

.contact__social-links
	padding-left 0
	list-style none

	@media small-only
		display flex
		justify-content space-between

.contact__social-link
	font-size rem(20)

	.text-underline
		text-decoration none
