@require './functions'


//-------------------------------------------
// Text
//-------------------------------------------

text()
	margin-top 0

	&:only-child
	&:last-child
		margin 0

description()
	margin-bottom rem(16)
	line-height 1.6


//-------------------------------------------
// Button
//-------------------------------------------

button()
	width 100%
	padding rem(20)
	color text-color--alternate
	background background-color--bold
	border 0
	outline 0

	&:hover
		background background-color--alternate
	&:focus
		background background-color--bold
