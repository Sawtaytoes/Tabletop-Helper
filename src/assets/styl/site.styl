@charset 'UTF-8'
@require './includes/**/*'


//-------------------------------------------
// Container
//-------------------------------------------

.site-container
	width 100%
	max-width 100%
	height 100%
	min-height 100vh
	z-index 2
	position relative
	background-color background-color--muted
	overflow-x visible

.site-header
	position fixed
	top 0
	left 0
	width 100%
	z-index 3

	@media header-nav-down
		position absolute

	@media print-only
		display none


//-------------------------------------------
// Content
//-------------------------------------------

.site-content-container
	position relative
	width 100%
	max-width 100%
	height 100%
	min-height 100%

.site-content
	display flex
	flex-direction column
	flex 1 1 100%
	align-items stretch
	width 100%
	max-width site-content-width
	height 100%
	min-height 100vh
	margin 0 auto
	// padding header-padding + bubble-spacing 0 bubble-spacing
	background background-color--alternate

	@media small-up
		padding-left bubble-spacing
		padding-right bubble-spacing

	@media print-only
		padding-top 0

.site-main
	flex 1 1 auto


//-------------------------------------------
// Navigation
//-------------------------------------------

.site-go-to-top
	right bubble-spacing
	bottom (bubble-spacing/2)
	position fixed
	z-index 3

	@media small-up
		right bubble-spacing + (bubble-spacing/2)

	@media print-only
		display none

.site-go-to-top__link
	display block
	padding rem(10 14)
	color text-color--wild
	background-color background-color--alternate
	border-radius rem(10)


//-------------------------------------------
// Background
//-------------------------------------------

.site-background
	margin 0
	position fixed
	border 0
	width 100%
	max-width 100%
	height 100%
	z-index 1
	background url(site-background)
	background-position center
	background-repeat no-repeat
	background-size cover
