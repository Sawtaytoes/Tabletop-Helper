@charset 'UTF-8'
@require './includes/**/*'


//-------------------------------------------
// Containers
//-------------------------------------------

.players-selector-container
	margin 0
	padding 0
	border 0
	color white

.players-selector
	display flex
	justify-content center
	align-items center
	border-bottom rem(3) solid skyblue


//-------------------------------------------
// Content
//-------------------------------------------

.players-selector__content
	line-height 3

.players-selector__field
	width 2.35ex
	padding 0 0 0 rem(5)
	border 0
	background-color darkblue

	&:focus
		outline none

.players-selector__label
	padding-right rem(10)
	background-color darkblue

.players-selector__button
	flex 1 1 auto
	border 0
	padding 0 rem(10)
	color navy
	background-color lightblue

	&:hover
		color white
		background-color blue


//-------------------------------------------
// Selectors
//-------------------------------------------

.players-selector__arrows
	display flex
	flex-direction column
	align-items center
	height 100%
	line-height 1.5
	text-align center
	background-color navy

.players-selector__arrow
	flex 0 0 50%
	padding 0 rem(2.5)

	&:hover
		background-color royalblue
